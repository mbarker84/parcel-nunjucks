{
  "name": "parcel-nunjucks",
  "version": "1.0.0",
  "description": "",
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "watch": {
    "build:html": {
      "patterns": [
        "src",
        "test"
      ],
      "extensions": "njk",
      "runOnChangeOnly": true
    }
  },
  "scripts": {
    "start": "run-p run:parcel watch:nunjucks",
    "run:parcel": "parcel src/index.html --port 3000 --open --no-source-maps",
    "build:html": "nunjucks-to-html --baseDir src --dest src",
    "build:parcel": "parcel build src/index.html --dist-dir dist --no-source-maps",
    "build:svg": "svg-sprite-generate -d src/icons -o src/sprite.svg",
    "build": "run-s clean build:html build:svg build:parcel",
    "watch:nunjucks": "npm-watch",
    "clean": "rm -rf dist"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@parcel/transformer-sass": "^2.0.1",
    "autoprefixer": "^10.4.0",
    "chokidar": "^3.5.2",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.11.0",
    "nunjucks": "^3.2.3",
    "nunjucks-to-html": "^1.1.0",
    "parcel": "^2.0.1",
    "postcss": "^8.3.11",
    "prettier": "^2.4.1",
    "sass": "^1.43.4",
    "sharp": "^0.29.1",
    "stylelint": "^14.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "svg-sprite-generator": "^0.0.7",
    "tailwindcss": "^2.2.19"
  }
}
